# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_SECRET=your_secret_key_here_change_this_to_random_string

# Database Configuration (PythonAnywhere MySQL)
# Format: mysql+pymysql://USERNAME:PASSWORD@USERNAME.mysql.pythonanywhere-services.com/USERNAME$DATABASE_NAME
DATABASE_URL=mysql+pymysql://YOUR_USERNAME:YOUR_PASSWORD@YOUR_USERNAME.mysql.pythonanywhere-services.com/YOUR_USERNAME$kannada_db?charset=utf8mb4

# Email Configuration (Gmail SMTP)
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_gmail_app_password_here

# Admin Credentials
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your_admin_password_here

# Optional: Flask Environment
FLASK_ENV=production
